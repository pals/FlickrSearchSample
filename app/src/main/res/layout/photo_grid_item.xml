<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="photoItem"
            type="com.flickrdemo.data.model.PhotoItem" />

        <variable
            name="viewmodel"
            type="com.flickrdemo.ui.main.viewmodel.PhotosDataViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewmodel.setClickedPhotoItem(photoItem)}"
        android:padding="@dimen/dp_3">


        <ImageView
            android:id="@+id/photo_item_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/photo_item_image_height"
            android:contentDescription="@string/photo_image_text"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setPhotoItemImageUsingGlide="@{photoItem.media.mediaLink}" />

        <TextView
            android:id="@+id/photo_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:minLines="2"
            android:text="@{photoItem.title}"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_item_image"
            tools:text="" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>